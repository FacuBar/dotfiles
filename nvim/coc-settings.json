{
	"languageserver": {
		"c": {
			"command": "ccls",
			"filetypes": ["c"],
			"rootPatterns": [".ccls", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				},
				"client": {
					"snippetSupport": true
				}
			}
		},
        "go": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        }
	},
    "go.goplsOptions": {
        "staticcheck": true
    }
}
